<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yatoooon.coordinator_example">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.yatoooon.layout_example.ViewPager2Activity"></activity>
        <activity android:name="com.yatoooon.layout_example.ViewPagerActivity" />
        <activity android:name="com.yatoooon.layout_example.RecyclerViewActivity" />
        <activity
            android:name="com.yatoooon.layout_example.CoordinatorLayoutActivity"
            android:label="@string/title_activity_scroll_based_activtiy"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name="com.yatoooon.layout_example.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>